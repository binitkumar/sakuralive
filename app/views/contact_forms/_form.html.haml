= form_for @contact_form do |f|
  - if @contact_form.errors.any?
    #error_explanation
      %h2= "#{pluralize(@contact_form.errors.count, "error")} prohibited this contact_form from being saved:"
      %ul
        - @contact_form.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :message
    = f.text_area :message
  .field
    = f.label :status
    = f.text_field :status
  .actions
    = f.submit 'Save'
